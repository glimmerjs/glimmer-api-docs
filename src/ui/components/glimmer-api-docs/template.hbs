<div id="top-menu">
  <h1><a href="/" onclick={{action showIndex}}>{{model.main.title}}</a></h1>
</div>

<div class="row" id="column-container">
  <div class="four columns" id="menu-container">
      <left-menu
          @data={{model.menu}}
          @showProject={{action showProject}}
          @showModule={{action showModule}}
          />
  </div>
  <div class="eight columns" id="content-container">
    <!-- module won't be used for project-landing -->
    {{#if theCurrentView.componentName}}
      {{component theCurrentView.componentName
          project=theCurrentView.project
          module=theCurrentView.module
          showProject=(action showProject)
          showModule=(action showModule)
          }}
    {{else if theCurrentView.notFound}}
      <not-found @showIndex={{action showIndex}} />
    {{else}}
      <section class="content-container">
        <p>
          {{model.main.intro}}
        </p>
      </section>
    {{/if}}
  </div>
</div>
